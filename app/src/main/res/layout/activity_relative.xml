<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zkx.myapplication.RelativeActivity">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="78dp"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        tools:layout_editor_absoluteY="425dp"
        tools:layout_editor_absoluteX="14dp">

        <Button
            android:id="@+id/relative_bn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="返回" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="284dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="158dp">

            <Button
                android:id="@+id/b1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="第一个Button" />

            <Button
                android:id="@+id/button26"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/b1"
                android:text="第二个Button" />

            <Button
                android:id="@+id/button29"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@+id/b1"
                android:text="第四个Button" />

            <Button
                android:id="@+id/button30"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/button29"
                android:text="第三个Button" />
        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
