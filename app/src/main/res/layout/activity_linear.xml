<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zkx.myapplication.LinearActivity">

    <LinearLayout
        android:id="@+id/line_layout"
        android:layout_width="371dp"
        android:layout_height="314dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="55dp"
        tools:layout_editor_absoluteX="-37dp">

        <Button
            android:id="@+id/bn_level"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="水平布局" />
        android:onClick="levelClick"/>


        <Button
            android:id="@+id/bn_vertical"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="垂直布局" />
        android:onClick="VerticalClick"/>

        <Button
            android:id="@+id/bn_left"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="靠左对齐" />
        android:onClick="LeftClick"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="336dp"
        android:layout_height="108dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/line_bn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="返回" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
